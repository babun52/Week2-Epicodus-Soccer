<%= render "layouts/errors", :object => @product %>

<div class="container">
  <%= simple_form_for @product, :html => { :multipart => true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :detail %>
    <%= f.text_area :detail %>
    <%= f.file_field :image %>
    <%= f.submit %>
  <% end %>
</div>
